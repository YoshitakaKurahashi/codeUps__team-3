<!DOCTYPE html>
<html lang="ja">
  <%- include('./common/_head') %>
  <body class="p-blog-page">

    <!-- header -->
    <%- include('./common/_top-header') %> 

    <!-- 下層ページのMV -->
    <div class="p-blog-mainvisual mainviusal">
      <%- include('./parts/_c-underpage-mainvisual', {title:'ブログ'}) %> 
    </div>

    <!-- パンくずリスト -->
    <div class="l-inner"><%- include('./parts/_c-breadcrumbs',{text:'ブログ記事一覧'}) %></div>
    <!-- /.l-inner -->

    <section class="p-blog-under">
      <div class="l-inner">
        <!-- カテゴリ表示 -->
        <div class="p-blog-under__category">
          <%- include('./parts/_c-category');  %>
        </div>
        <!-- /.p-blog-under__category -->

        <!-- ブログ一覧 -->
        <div class="p-blog-under__contents">
          <div class="p-blog__contents">
            <% for (var i=1; i <= 8; i++) { %> 
              <%- include('./parts/_c-blog-card',{
              link:'#',
              img:'./images/common/blog-img01.jpg',
              img__alt:'rectangle',
              blog__title:'タイトルが入ります。タイトルが入ります。',
              blog__text:'説明文が入ります。説明文が入ります。説明文が入ります。',
              blog__category:'カテゴリ',
              date1:'2021-07-20',
              date2:'2021.07.20'
            }) %> 
          <% } %> 
        </div><!-- /.blog__contents -->
        </div><!-- /.p-blog-under__contents -->

        <!-- ページネーション -->
        <div class="p-blog-under__pagination">
          <%- include('./parts/_c-pagination') %>
        </div><!-- /.p-blog-under__pagination -->
      </div>
      <!-- /.l-inner -->
    </section>
    <!-- /.p-blog-under -->

    <%- include('./common/_contact') %>

    <%- include('./common/_footer') %>
  </body>
</html>
