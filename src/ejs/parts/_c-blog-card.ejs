<div class="l-blog-card">
  <a href="<% link %>" class="c-blog-card">
    <div class="c-blog-card__img"><img src="<%= img %> " alt="<%= img__alt %> "></div><!-- /.c-blog-card__img -->
    <div class="c-blog-card__contents c-card-content">
      <div class="c-card-content__title"><%= blog__title %> </div><!-- /.c-card-content__title -->
      <p class="c-card-content__text"><%= blog__text %> </p><!-- /.c-card-content__text -->
      <div class="c-card-content__info">
        <div class="c-card-info__category"><%= blog__category %> </div><!-- /.c-card-info__category -->
        <time class="c-card-info__day" datetime="<%= date1 %> "><%= date2 %> </time><!-- /.c-card-info__day -->
      </div><!-- /.c-card-content__info -->
    </div><!-- /.c-blog-card__contents -->
  </a><!-- /.c-blog-card -->
</div><!-- /.l-blog-card -->